.null {
  text-align: center;
  font-size: center;
}

.null image {
  width: 50%;
  margin: 30px;
}

.page {
  background: #EDEDED;
}

.null .toIndex {
  margin: 30px auto;
  background-color: #ff6422;
  color: #fff;
  width: 70%;
  height: 40px;
  line-height: 40px;
}

.cart {
  height: 100%;
  width: 100%;
}

/* 商品列表 */
.cart-item-list {
  height: 100px;
  width: 100%;
  background-color: #fff;
  border-bottom: #000000 solid 1px;
}

.item-check {
  height: 100px;
  width: 30px;
  float: left;
}

.item-check .checkbox {
  width: 25px;
  height: 25px;
  border: #C6C6C6 solid 2px;
  border-radius:5px;
  left: 2px;
  top: 35px;
  vertical-align: middle;
  display: inline-block;
  display: table-cell;
  line-height: 25px;
  vertical-align: middle;
  text-align: center;
  position: relative;

}

.checkbox .null {
  background-color: #fff;
  position: absolute;
  width: 25px;
  height: 25px;
  top: 0;
  left: 0;
  z-index: 0;
}

.item-check .checkbox .true {
  position: absolute;
  width: 15px;
  height: 15px;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 1;
}

.cart-item-list .phone {
  width: 100px;
  height: 90px;
  float: left;
  padding-left: 10px;
}

.item-box {
  width: 130px;
  height: 100%;
  float: left;
  margin-left: 10px;
}

.item-box .item-name,
.item-price,
.num-box {
  padding-top: 10px;
}

.item-box .item-price {
  color: #ff6422;
}

.num-box {
  width: 130px;
}

.num-box .add,
.num,
.sub {
  float: left;
  border: 1px solid #E5E5E5;
  text-align: center;
  height: 20px;
  line-height: 20px;
}

.num-box .add,
.sub {
  width: 20px;
}

.num-box .num {
  width: 40px;
}

.item-del {
  width: 60px;
  height: 100%;
  float: right;

}

.item-del image {
  width: 30px;
  height: 30px;
  padding-top: 50px;
  padding-right: 30px;
}

/* 底部总价 */
.total {
  background-color: #fff;
  position: fixed;
  width: 100%;
  height: 65px;
  bottom: 0;
}

.total .price-set {
  float: right;
  font-size: 20px;
  width: 100px;
  height: 65px;
  color: #fff;
  line-height: 70px;
  text-align: center;
  background-color: #FB6600;
}

.total .total-left {
  float: left;
  height: 65px;
  width: 100px;
  margin-left: 10px;
}

.total-left .total-text {
  width: 60px;
  height: 65px;
  font-size: 20px;
  text-align: center;
  line-height: 65px;
}

.total-left .total-price {
  width: 40px;
  height: 65px;
  font-size: 18px;
  text-align: center;
  line-height: 65px;
  color: #FB6600
}

.total-left .total-text,
.total-price {
  float: left;
}